@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Full-width jumbotron -->
<div class="py-5">
  <div class="container text-center">
    <h1 class="display-4 p-2">Hej och välkommen! Vi ska spela "Words".</h1>
    <p class="lead">Det går ut på att gissa rätt ord.</p>
    <hr class="my-4">
  <form method="post" asp-page-handler="StartGame">
    <div class="form-group">
        <h3 class="dsplay-4 p-2">Regler</h3>
        <p class="lead">Du får gissa på en bokstav i taget till dess du klarar att gissa hela ordet.</p>
        <p class="lead">Klicka på "Starta spelet" när du är redo att starta.</p>
        <button type="submit" class="btn btn-success btn-lg mb-5 mt-5">Starta spelet</button>
    </div>
</form>
  </div>
</div>



@if (!string.IsNullOrEmpty(Model.Message))
{
        <div class="alert alert-info">@Model.Message</div>
}

@if (!string.IsNullOrEmpty(Model.RandomWord))
{
            <div>
        @for (int i = 0; i < Model.RandomWord.Length; i++)
        {
            var ch = Model.CorrectGuesses.Contains(Model.RandomWord[i]) ? Model.RandomWord[i].ToString() : "";
                        <span class="letter-box">@ch</span>
        }
            </div>
            <form method="post" asp-page-handler="MakeGuess">
                <div class="form-group mt-5">
                    <label for="guess">Gissa med en bokstav:</label>
                    <input asp-for="Guess" type="text" id="guess" name="guess" class="form-control" maxlength="1" />
                </div>
                <button type="submit" class="btn btn-secondary mt-5">Gissa</button>
            </form>

            <div class="mt-5">
                <p>Fel gissningar: @string.Join(", ", Model.IncorrectGuesses)</p>
                <p>Rätt gissningar: @string.Join(", ", Model.CorrectGuesses)</p>
        @* <p>Antal fel gissningar kvar: Model.MaxIncorrectGuesses - Model.IncorrectGuesses.Count</p> *@
            </div>
}
<div class="modal fade" id="winModal" tabindex="-1" aria-labelledby="winModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="winModalLabel">Grattis! Du vann!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Stäng"></button>
            </div>
            <div class="modal-body text-center">
                <p>Du klarade ordet <strong>@Model.RandomWord</strong>!</p>
                <p>Vill du spela igen?</p>
            </div>
            <div class="modal-footer justify-content-center">
                <form method="post" asp-page-handler="StartGame">
                    <button type="submit" class="btn btn-success">Nytt ord</button>
                </form>
                <form method="post" asp-page-handler="QuitGame">
                    <button type="submit" class="btn btn-secondary">Nej, rensa min data.</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.HasWon)
{
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var winModal = new bootstrap.Modal(document.getElementById('winModal'));
                winModal.show();
            });
        </script>
}





